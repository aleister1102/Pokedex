<div class='mt-4'>
    <h1>My pokemons</h1>
    <table class='table'>
        <thead>
            <tr>
                <th scope='col'>#</th>
                <th scope='col'>Name</th>
                <th scope='col'>Type</th>
                <th scope='col' colspan='2'>Description</th>
            </tr>
        </thead>
        <tbody>
            {{#each pokemons}}
                <tr>
                    <th scope='row'>{{sum @index 1}}</th>
                    <td>{{this.name}}</td>
                    <td>{{this.type}}</td>
                    <td>{{this.description}}</td>
                    <td>
                        <a
                            href='/pokemons/{{this._id}}/edit'
                            class='btn btn-link'
                        >Edit</a>
                        <a href='' class='btn btn-link'>Delete</a>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>